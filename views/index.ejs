<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book Search</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
      }
      body {
        background: radial-gradient(circle, #105, #109, #000);
        height: 100vh;
        background-size: cover;
        background-position: center;
        padding: 20px;
      }
      .search-container {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
        gap: 10px;
      }
      input {
        padding: 10px;
        width: 300px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }
      button {
        padding: 10px 15px;
        font-size: 16px;
        background: #24a;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }
      button:hover {
        background: #119;
      }
      .books-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
      }
      .book-card {
        background: white;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        cursor: pointer;
        width: 250px;
      }
      .book-card img {
        width: 150px;
        height: auto;
        margin-top: 10px;
      }
      .full-screen {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.9);
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
        padding: 20px;
      }
      .full-screen .content {
        display: flex;
        align-items: center;
        gap: 20px;
        max-width: 800px;
        background: #222;
        padding: 20px;
        border-radius: 10px;
      }
      .full-screen img {
        width: 200px;
        height: auto;
      }
      .full-screen .text {
        flex: 1;
      }
      .close-btn {
        position: absolute;
        top: 20px;
        right: 20px;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <div class="search-container">
      <input type="text" id="searchInput" placeholder="Enter book title..." />
      <button onclick="searchBooks()">Search</button>
    </div>
    <div class="books-container" id="booksContainer">
      <p>Search for a book to see results here.</p>
    </div>
    <div id="fullScreen" class="full-screen" style="display: none">
      <button class="close-btn" onclick="closeFullScreen()">Close</button>
      <div class="content">
        <img id="fullImage" src="" alt="Book Cover" />
        <div class="text">
          <h2 id="fullTitle"></h2>
          <p id="fullAuthor"></p>
          <p id="fullPublished"></p>
          <p id="fullDescription"></p>
        </div>
      </div>
    </div>
    <script>
      async function searchBooks() {
        const query = document.getElementById("searchInput").value;
        if (!query) return;

        try {
          const response = await fetch(
            `https://www.googleapis.com/books/v1/volumes?q=${query}`
          );
          const data = await response.json();
          const booksContainer = document.getElementById("booksContainer");

          if (data.items && data.items.length > 0) {
            booksContainer.innerHTML = data.items
              .map((book, index) => {
                const info = book.volumeInfo;
                return `
                <div class="book-card" onclick="showFullScreen(${index})">
                  <h3>${info.title}</h3>
                  <img src="${
                    info.imageLinks
                      ? info.imageLinks.thumbnail
                      : "https://th.bing.com/th/id/OIP.MBSOX085k67CAzrk7EpycAHaHk?pid=ImgDet&w=195&h=199&c=7&dpr=1.4"
                  }" alt="Book Cover" />
                </div>
              `;
              })
              .join("");
            window.booksData = data.items;
          } else {
            booksContainer.innerHTML = "<p>No results found.</p>";
          }
        } catch (error) {
          console.error("Error fetching book details:", error);
          document.getElementById("booksContainer").innerHTML =
            "<p>Failed to fetch book details.</p>";
        }
      }

      function showFullScreen(index) {
        const book = window.booksData[index].volumeInfo;
        document.getElementById("fullTitle").innerText = book.title;
        document.getElementById("fullAuthor").innerText = `Author: ${
          book.authors ? book.authors.join(", ") : "Unknown"
        }`;
        document.getElementById("fullPublished").innerText = `Published: ${
          book.publishedDate || "Unknown"
        }`;
        document.getElementById("fullImage").src = book.imageLinks
          ? book.imageLinks.thumbnail
          : "https://th.bing.com/th/id/OIP.MBSOX085k67CAzrk7EpycAHaHk?pid=ImgDet&w=195&h=199&c=7&dpr=1.4";
        document.getElementById("fullDescription").innerText =
          book.description || "No description available.";
        document.getElementById("fullScreen").style.display = "flex";
      }

      function closeFullScreen() {
        document.getElementById("fullScreen").style.display = "none";
      }
    </script>
  </body>
</html>
